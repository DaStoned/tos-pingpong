$(info Using TosPingPongSender!)

TOSPINGPONG_TARGET ?= 0x0002
TOSPINGPONG_COUNT ?= 5
TOSPINGPONG_DELAY ?= 200
TOSPINGPONG_PINGS ?= 3
TOSPINGPONG_PERIOD ?= 2000

CFLAGS += -DTOSPINGPONGER=1
CFLAGS += -DTOSPINGPONG_TARGET=$(TOSPINGPONG_TARGET)
CFLAGS += -DTOSPINGPONG_COUNT=$(TOSPINGPONG_COUNT)
CFLAGS += -DTOSPINGPONG_DELAY=$(TOSPINGPONG_DELAY)
CFLAGS += -DTOSPINGPONG_PINGS=$(TOSPINGPONG_PINGS)
CFLAGS += -DTOSPINGPONG_PERIOD=$(TOSPINGPONG_PERIOD)